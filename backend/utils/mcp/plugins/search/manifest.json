  "entryPoint": {
    "module": "backend.utils.mcp.plugins.search.search_agent",
    "class": "SearchAgent"
  },
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": {
        "type": "string",
        "description": "搜索查询词,支持中英文"
      }
    },
    "required": [
      "query"
    ]
  }
}

